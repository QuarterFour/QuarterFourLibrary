<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    <RelativeLayout
        android:id="@+id/topLinerar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">


        <CheckBox
            android:button="@null"
            android:background="@mipmap/hot_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Detail_Back"/>

        <CheckBox
            android:button="@null"
            android:checked="false"
            android:background="@mipmap/hot_like"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@id/Detail_Back"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Detail_like"/>

        <CheckBox
            android:button="@null"
            android:checked="false"
            android:background="@mipmap/hot_unlike"
            android:layout_alignLeft="@id/Detail_like"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Detail_unlike"/>

        <CheckBox
            android:button="@null"
            android:checked="false"
            android:layout_alignLeft="@id/Detail_unlike"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:background="@mipmap/hot_reship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Detail_down"/>

        <CheckBox
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:button="@null"
            android:background="@mipmap/hot_like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Detail_photo"/>
    </RelativeLayout>

<LinearLayout
    android:layout_below="@+id/topLinerar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<com.a.quarter.view.view.ItemIjkPlayerView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/DetailHot_ijkPlay"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="999999999999"
        android:padding="5dp"
        android:id="@+id/DetailsHot_NameTextView"/>

    <TextView
        android:text="567次播放，今天19:22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5dp"
        android:id="@+id/DetailsHot_TimeTextView"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="#C0C0C0"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:id="@+id/DetailsHot_Image"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/comment"
            android:layout_height="120dp" />

        <TextView
            android:layout_below="@+id/DetailsHot_Image"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="拿起手机速来抢个沙发吧 ! ~~"/>

    </RelativeLayout>

</LinearLayout>

</RelativeLayout>