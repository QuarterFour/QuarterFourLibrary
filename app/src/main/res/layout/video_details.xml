<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.a.quarter.model.media.IjkVideoView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/Details_ijkPlay"></com.a.quarter.model.media.IjkVideoView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="999999999999"
        android:padding="5dp"
        android:id="@+id/Details_NameTextView"/>

    <TextView
        android:text="567次播放，今天19:22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5dp"
        android:id="@+id/Details_TimeTextView"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="#C0C0C0"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Details_Image"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            android:layout_height="100dp" />

        <TextView
            android:layout_below="@+id/Details_Image"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="拿起手机速来抢个沙发吧"/>

    </RelativeLayout>

</LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Details_writeTextView"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_goods_store"
        android:textSize="20sp"
        android:padding="5dp"
        android:text="写评论"/>



</RelativeLayout>