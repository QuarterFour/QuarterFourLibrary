<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hotfra_recycal_layout_icon_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/header" />

        <LinearLayout
          android:layout_toRightOf="@+id/hotfra_recycal_layout_icon_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotfra_recycal_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="111111111111111111111111"
                android:textColor="#EE4848"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hotfra_recycal_layout_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-7-12" />

        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/songxiaocha" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/hotfra_recycal_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="宋莫凡参加90周年兵"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/header"
        />

</LinearLayout>